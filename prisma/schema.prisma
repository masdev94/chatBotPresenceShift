generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ritual {
  id          String                 @id @default(cuid())
  slug        String                 @unique
  name        String
  description String?                @db.Text

  versions RitualConfigVersion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RitualConfigVersion {
  id        String   @id @default(cuid())
  ritualId  String
  ritual    Ritual   @relation(fields: [ritualId], references: [id])

  versionNumber Int
  isActive      Boolean  @default(false)

  label   String?
  notes   String?   @db.Text

  configJson Json

  createdBy String?
  createdAt DateTime @default(now())

  @@index([ritualId])
  @@unique([ritualId, versionNumber])
}
